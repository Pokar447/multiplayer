<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="multiplayer.client.Client">
   <bottom>
      <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Connection:" />


            <Label fx:id="lblConnection" text="&lt;status&gt;" />



            <Region HBox.hgrow="ALWAYS" />
            <Label text="Login:" />
            <Label text="&lt;status&gt;" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>

             <Label fx:id="lblLobby" text="&lt;Lobby&gt;" />


            <GridPane alignment="center">
                <Label fx:id="otherPlayerConnectionStatus" wrapText="true" text="TODO ist ein zweiter Player verbunden und eingeloggt? Informationen zu mir und zu Player 2 anzeigen"/>
            </GridPane>

             <HBox alignment="center" spacing="10.0">
                <Button fx:id="submitBtn" mnemonicParsing="false" onAction="#userReady" text="Let's play!">
                  <HBox.margin>
                     <Insets top="35.0" />
                  </HBox.margin></Button>
             </HBox>

             <HBox alignment="center" spacing="10.0">
                 <Button fx:id="statisticsBtn" mnemonicParsing="false" onAction="#statistics" text="Statistic">
                     <HBox.margin>
                         <Insets top="35.0" />
                     </HBox.margin></Button>
             </HBox>

             <HBox alignment="center" spacing="10.0">
                 <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logout" text="Logout">
                     <HBox.margin>
                         <Insets top="35.0" />
                     </HBox.margin></Button>
             </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
