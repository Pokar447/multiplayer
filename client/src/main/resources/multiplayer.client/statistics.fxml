<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <bottom>
        <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
            <children>



                <Region HBox.hgrow="ALWAYS" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>

                <Label fx:id="statisticLbl" text="statistic">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Label>

                <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
                    <children>

                        <Label fx:id="siegeLbl" text="Siege: " />
                        <Text fx:id="siegeTxt" text="0" />

                        <Label fx:id="niederlagenLbl" text="Niederlagen: " />
                        <Text fx:id="niederlagenTxt" text="0" />
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
                </HBox>

                <TableView fx:id="historyTable" prefHeight="200.0" prefWidth="200.0">

                </TableView>

                <HBox alignment="center" spacing="10.0">
                    <Button fx:id="statisticBtn" mnemonicParsing="false" onAction="#login" text="back">
                        <HBox.margin>
                            <Insets top="35.0" />
                        </HBox.margin></Button>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
